#! /bin/sh

(
  cd ~
  install -v --mode=700 -d ~/.ssh
  if grep -E '^source (/etc|~)/psoxizsh/zshrc' ~/.zshrc 
  then
    if [[ -d ~/.psoxizsh ]]
    then
      echo 'source ~/.psoxizsh/zshrc' >>~/.zshrc
    elif [[ -d /etc/psoxizsh ]]
    then
      echo 'source ~/.psoxizsh/zshrc' >>~/.zshrc
    fi
  fi
)

